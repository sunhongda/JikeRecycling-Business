<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:minHeight="@dimen/item_h_136dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/bg"
        app:cardCornerRadius="@dimen/corners_8dp"
        android:layout_marginBottom="@dimen/margin_top_4dp"
        app:cardPreventCornerOverlap="false">

        <View
            android:id="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="@dimen/corners_8dp"
            android:background="@drawable/shape_green_c" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/corners_8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin">



                <ImageView
                    android:id="@+id/tripelist_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="10dp"
                    android:minHeight="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:background="@drawable/reddot"

                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/tv_bianhao"
                    android:layout_marginLeft="@dimen/corners_8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号："
                    android:textSize="@dimen/tx_12sp"/>

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_8dp"

                    android:gravity="right"
                    android:text="时间："
                    android:textColor="@color/text_secead"
                    android:textSize="@dimen/tx_12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_top_8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京市->"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/tx_14sp" />

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京市···"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/tx_14sp" />

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京市"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/tx_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/margin_top_8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_8dp"
                    android:text="2015-09-17 12:02"
                    android:textColor="@color/text_secead"
                    android:textSize="@dimen/tx_12sp" />

                <LinearLayout
                    android:layout_width="@dimen/img_16dp"
                    android:layout_height="@dimen/img_40dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/diver_1dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/diver_1dp"
                        android:src="@mipmap/ic_car" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="1dp"
                        android:src="@mipmap/ic_d_line" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_start_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_top_8dp"
                    android:text="北京市"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/tx_12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/margin_top_8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_8dp"
                    android:text="2015-09-17 12:02"
                    android:textColor="@color/text_secead"
                    android:textSize="@dimen/tx_12sp" />

                <LinearLayout
                    android:layout_width="@dimen/img_16dp"
                    android:layout_height="@dimen/img_40dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="1dp"
                        android:src="@mipmap/ic_down" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="1dp"
                        android:src="@mipmap/ic_car" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/diver_1dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_end_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_top_8dp"
                    android:text="成都"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/tx_12sp" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"
                />
            <LinearLayout
                android:layout_marginBottom="@dimen/padding_4dp"
                android:id="@+id/ll_pay"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/tv_payment_in_advance"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="已付金额???元"
                    android:textSize="@dimen/tx_15sp"
                    android:layout_height="wrap_content" />
                <View

                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    />

                <TextView
                    android:id="@+id/tv_final_payment"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/tx_15sp"
                    android:textColor="@color/to_pay_two_red"
                    android:text="点击确认收到尾款"
                    />



            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>