<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wbg"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/bg"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/corners_8dp">
        <!--android:layout_height="@dimen/img_112dp"-->
        <LinearLayout
            android:id="@+id/ll"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:background="@color/bg"
            android:layout_marginLeft="@dimen/padding_4dp"
            android:visibility="visible">

            <!--左侧线性布局-->

            <LinearLayout

                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="@dimen/img_28dp"
                    android:layout_height="@dimen/img_16dp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/margin_top_8dp"
                    android:layout_marginRight="@dimen/padding_4dp"
                    android:layout_marginTop="@dimen/margin_top_8dp"
                    android:src="@mipmap/bus" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="接火车"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/tv_order_nb"
                        android:layout_marginRight="@dimen/margin_top_8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="订单号：BS20150917"
                        android:textColor="@color/text_secead"
                        android:textSize="@dimen/tx_12sp" />

                </LinearLayout>
                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/diver_1dp"
                    android:background="@color/diver" />
                <!--时间和已读未读-->
                <LinearLayout
                    android:layout_marginTop="@dimen/padding_4dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <!--用车时间，出发地，目的地-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <!--用车时间  时分   日期-->
                        <LinearLayout
                            android:layout_marginTop="@dimen/corners_10dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_use_car_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="用车时间"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/tx_14sp" />
                            <TextView
                                android:id="@+id/tv_time_min"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="14:00"
                                android:layout_marginLeft="@dimen/margin_top_8dp"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/tx_14sp" />
                            <TextView
                                android:id="@+id/tv_start_address_time_month_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9月20日"
                                android:layout_marginLeft="@dimen/corners_8dp"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/tx_14sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/corners_10dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/start_address"
                                android:layout_marginLeft="@dimen/corners_10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="北京市"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/tx_14sp" />
                            <TextView
                                android:id="@+id/arrows"
                                android:layout_marginLeft="@dimen/bt_h_24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="→"
                                />

                            <TextView
                                android:id="@+id/end_address"
                                android:layout_marginLeft="@dimen/bt_h_24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="北京市"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/tx_14sp" />

                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>


                    <LinearLayout
                        android:layout_marginRight="@dimen/padding_4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_order_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_8dp"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:text="未报价"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/tx_15sp" />

                        <View
                            android:layout_width="@dimen/diver_1dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />



                        <TextView
                            android:id="@+id/order_time"
                            android:layout_marginRight="@dimen/corners_8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/padding_8dp"
                            android:paddingLeft="@dimen/padding_8dp"
                            android:paddingRight="@dimen/padding_8dp"
                            android:text="2015-9-28"
                            android:textColor="@color/text_secead"
                            android:textSize="@dimen/tx_13sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>

