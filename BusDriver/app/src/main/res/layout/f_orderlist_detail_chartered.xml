<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wbg"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"

            app:cardBackgroundColor="@color/bg"
            app:cardCornerRadius="@dimen/corners_10dp"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_8dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/padding_8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_order_nb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单号：????"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/tx_12sp" />

                        <View
                            android:layout_width="@dimen/bt_h_40dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="时间：???"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/tx_12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/margin_top_8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="出发时间"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/tx_14sp" />

                        <TextView
                            android:id="@+id/tv_start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="？？？"
                            android:textColor="@color/text_secead"
                            android:textSize="@dimen/tx_14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/margin_top_8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="包车类型"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/tx_14sp" />

                        <TextView
                            android:id="@+id/tv_chartered_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="全日/半日租"
                            android:textColor="@color/text_secead"
                            android:textSize="@dimen/tx_14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/margin_top_8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="大巴类型"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/tx_14sp" />

                        <TextView
                            android:id="@+id/tv_bus_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="？？座大巴"
                            android:textColor="@color/text_secead"
                            android:textSize="@dimen/tx_14sp" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/margin_top_8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="包车单价"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/tx_14sp" />

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="？元"
                            android:textColor="@color/text_secead"
                            android:textSize="@dimen/tx_14sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/margin_top_8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="包车里程"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/tx_14sp" />

                        <TextView
                            android:id="@+id/tv_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="？小时/？公里"
                            android:textColor="@color/text_green"
                            android:textSize="@dimen/tx_14sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/margin_top_8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="总计"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/tx_14sp" />

                        <TextView
                            android:id="@+id/tv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="？？？元/?量"
                            android:textColor="@color/text_secead"
                            android:textSize="@dimen/tx_14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_alreadypay"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/margin_top_8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="已付金额"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/tx_14sp" />

                        <TextView
                            android:id="@+id/tv_alreadypay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="？？？元"
                            android:textColor="@color/text_secead"
                            android:textSize="@dimen/tx_14sp" />
                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/ll_refund"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/margin_top_8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="退单补偿金"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/tx_14sp" />

                        <TextView
                            android:id="@+id/tv_refund"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="？？？元"
                            android:textColor="@color/text_secead"
                            android:textSize="@dimen/tx_14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/days"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bt_h_32dp"
                        >
                    </View>
                    <LinearLayout
                        android:id="@+id/prompt"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green_p"
                        android:text="温馨提示："/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当您同意接单，您的意向会发送给乘客，等待乘客支付成功后达成交易。"/>


                    </LinearLayout>

                </LinearLayout>




                <!--android:background="#0000"-->
                <Button
                    android:id="@+id/bt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_h_48dp"
                    android:text="同意接单"
                    android:background="#0000"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/tx_15sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
</FrameLayout>