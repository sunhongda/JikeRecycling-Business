<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
        android:background="#0000">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:background="@color/v4_btn_layout_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/input_left" >

        <TextView
            android:id="@+id/photo_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传图片"
            android:textColor="#3b3b3b"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/v4_btn_layout_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/input_left"
        android:paddingRight="@dimen/input_left" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/take_photo"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/btn_take_photo_bg"
                    android:contentDescription="@null" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" >

                    <ImageView
                        android:id="@+id/take_photo_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/tmc_add_photo_camera"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/take_photo_icon"
                        android:text="拍照"
                        android:textColor="#7b8184"
                        android:textSize="15sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/from_files"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/btn_take_select_grallery_bg"
                    android:contentDescription="@null" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" >

                    <ImageView
                        android:id="@+id/photo_album_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/tmc_add_photo_album"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/photo_album_icon"
                        android:text="相册"
                        android:textColor="#7b8184"
                        android:textSize="15sp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/delete_files"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_updown"
            android:background="@drawable/v4_com_btn_choose_selector"
            android:gravity="center"
            android:paddingBottom="@dimen/input_font_updown"
            android:paddingTop="@dimen/input_font_updown"
            android:text="删除图片"
            android:textColor="#d34e3b"
            android:textSize="@dimen/font_34"
            android:visibility="gone" />

        <Button
            android:id="@+id/photo_cancle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/input_updown"
            android:layout_marginTop="@dimen/input_updown"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingBottom="@dimen/input_font_updown"
            android:paddingTop="@dimen/input_font_updown"
            android:text="取消"
            android:textColor="#ffffffff"
            android:textSize="@dimen/font_34" />
    </LinearLayout>

</LinearLayout>