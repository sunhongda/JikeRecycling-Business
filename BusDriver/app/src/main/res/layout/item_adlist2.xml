<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wbg"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_top_8dp">

    <!--android:layout_marginLeft="@dimen/activity_horizontal_margin"-->
    <!--android:layout_marginRight="@dimen/activity_horizontal_margin"-->
    <!--app:cardCornerRadius="@dimen/corners_8dp"-->
    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/bg"
        app:cardPreventCornerOverlap="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
       >
        <LinearLayout
            android:id="@+id/ll"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/bg"
            android:layout_marginLeft="@dimen/padding_4dp"
            android:visibility="visible">

            <!--左侧线性布局-->

            <!--android:layout_width="@dimen/img_28dp"-->

            <LinearLayout
                android:layout_width="12dp"

                android:orientation="vertical"
                android:layout_height="match_parent"
                >
                <!--<ImageView-->
                    <!--android:id="@+id/icon"-->
                    <!--android:layout_width="@dimen/img_28dp"-->
                    <!--android:layout_height="@dimen/img_16dp"-->
                    <!--android:layout_marginBottom="@dimen/margin_top_8dp"-->
                    <!--android:layout_marginRight="@dimen/padding_4dp"-->
                    <!--android:layout_marginTop="@dimen/margin_top_8dp"-->
                    <!--android:src="@mipmap/ic_car" />-->
                <ImageView
                    android:id="@+id/iv_carpooling_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/reddot"
                    android:layout_gravity="center_horizontal"
                    android:visibility="visible"
                    />

                <!--<ImageView-->
                <!--android:id="@+id/reddot"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginLeft="4dp"-->
                <!--android:src="@drawable/reddot"-->
                <!--android:visibility="visible" />-->

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_push_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pushnumber"
                        />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            />
                    <TextView
                        android:id="@+id/tv_sale_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="售票状态"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="right"
                        />


                </LinearLayout>
                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/diver_1dp"
                    android:background="@color/diver" />
                <!--时间和已读未读-->
                <LinearLayout
                    android:layout_marginTop="@dimen/padding_4dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <!--用车时间，出发地，目的地-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <!--用车时间  时分   日期-->
                        <LinearLayout
                            android:layout_marginTop="@dimen/corners_10dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_use_car_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="用车时间"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/tx_14sp" />
                            <TextView
                                android:id="@+id/tv_time_min"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2016-01-08 11:53"
                                android:layout_marginLeft="@dimen/margin_top_8dp"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/tx_14sp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_marginTop="@dimen/margin_top_4dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">



                            <LinearLayout
                                android:layout_width="@dimen/img_16dp"
                                android:layout_height="60dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:padding="@dimen/diver_1dp" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:padding="@dimen/diver_1dp"
                                    android:src="@mipmap/ic_car" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:padding="1dp"
                                    android:src="@mipmap/ic_d_line" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/start_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_top_8dp"
                                android:text="北京市"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/tx_12sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_marginBottom="@dimen/margin_top_8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">



                            <LinearLayout
                                android:layout_width="@dimen/img_16dp"
                                android:layout_height="60dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:padding="1dp"
                                    android:src="@mipmap/ic_down" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:padding="1dp"
                                    android:src="@mipmap/ic_car" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:padding="@dimen/diver_1dp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/end_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_top_8dp"
                                android:text="成都"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/tx_12sp" />
                        </LinearLayout>




                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>


                    <LinearLayout
                        android:layout_marginRight="@dimen/padding_4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:layout_marginTop="@dimen/corners_10dp"

                            android:id="@+id/tv_empty_position"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_8dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="余?座位"

                            android:textSize="@dimen/tx_15sp" />
                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_8dp"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:text="？元/位"
                            android:textColor="@color/green"
                            android:textSize="@dimen/tx_15sp" />

                        <Button
                            android:id="@+id/sale_tickets_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_8dp"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:text="开始售票"
                            android:visibility="invisible"
                            android:textColor="@color/wbg"
                            android:textSize="16sp" />
                        <View
                            android:layout_width="@dimen/diver_1dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                        <!--<TextView-->
                            <!--android:id="@+id/order_time"-->
                            <!--android:layout_marginRight="@dimen/corners_8dp"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:paddingBottom="@dimen/padding_8dp"-->
                            <!--android:paddingLeft="@dimen/padding_8dp"-->
                            <!--android:paddingRight="@dimen/padding_8dp"-->
                            <!--android:text="2015-9-28"-->
                            <!--android:textColor="@color/text_secead"-->
                            <!--android:textSize="@dimen/tx_13sp" />-->
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
