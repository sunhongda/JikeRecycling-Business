<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        xmlns:per="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            per:layout_heightPercent="50%w">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/img_share" />
        </FrameLayout>

        <TextView
            style="@style/tv_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分享成功，您将获得30元代金券"
            android:visibility="gone"/>

        <Button
            android:id="@+id/bt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/selector_whit"
            android:text="分享下载二维码"
            android:textColor="@color/text_black" />

        <Button
            android:id="@+id/bt_1"
            style="@style/bt_share"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/selector_auth"
            android:text="分享社交媒体" />
    </com.zhy.android.percent.support.PercentLinearLayout>
</LinearLayout>