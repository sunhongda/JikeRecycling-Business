<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-10dp"
    android:orientation="vertical"
    android:padding="@dimen/padding_8dp">

    <Button
        android:id="@+id/tv"
        android:layout_width="@dimen/bt_h_24dp"
        android:layout_height="@dimen/bt_h_24dp"
        android:layout_gravity="right"
        android:background="@mipmap/ad_close"
        />

    <View
        android:layout_width="@dimen/diver_1dp"
        android:layout_height="@dimen/padding_16dp"
        android:layout_marginRight="12dp"
        android:layout_gravity="right"
        android:background="@color/text_white" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@mipmap/img_driver_ad_show"
        app:layout_heightPercent="130%w" />
</com.zhy.android.percent.support.PercentLinearLayout>