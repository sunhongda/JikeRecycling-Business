<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color_f9"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginBottom="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="抢单成功"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_view_35" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="恭喜您抢单成功!"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_view_50" />

    </com.zhy.autolayout.AutoRelativeLayout>


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="50px">

        <Button
            android:id="@+id/recy_item_select"
            android:layout_width="270px"
            android:layout_height="60px"
            android:layout_marginLeft="50px"
            android:background="@drawable/btn_yes_shape"
            android:text="查看订单" />

        <Button
            android:id="@+id/recy_item_yes"
            android:layout_width="270px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:background="@drawable/btn_shape_cheng"
            android:text="确定"
            android:textColor="@color/text_color_white"/>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>