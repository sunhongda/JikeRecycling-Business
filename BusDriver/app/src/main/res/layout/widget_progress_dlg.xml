<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/default_margin_15A"
    android:paddingRight="@dimen/default_margin_15A"
    android:paddingBottom="@dimen/progressdialog_vertical_margin"
    android:paddingTop="@dimen/progressdialog_vertical_margin"
    android:background="@drawable/titlebg"
    android:gravity="center_vertical" >
    
    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        
         android:indeterminateDrawable="@drawable/common_progressbar"
        
        android:indeterminateBehavior="repeat"
        android:indeterminateDuration="1000"
        android:indeterminateOnly="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_marginLeft="@dimen/default_margin_5A">

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/progress_message"
            android:textColor="@color/default_font_color_c00"
            android:textSize="@dimen/default_font_size_t32" />

        <TextView
            android:id="@+id/additional_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>