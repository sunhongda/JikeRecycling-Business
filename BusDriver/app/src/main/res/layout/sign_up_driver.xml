<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signup1_root_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f0f0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f5f5f5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="司机认证"
            android:textColor="@android:color/black"
            android:textSize="20.5sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc" />

    <ScrollView
        android:id="@+id/signup1_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginTop="10dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="姓名"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/signup1_driver_name"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:hint="请输入姓名"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="@color/black_3"
                    android:textColorHint="@color/hint_color"
                    android:textSize="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginTop="1dp"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="性别"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <RadioGroup
                    android:id="@+id/signup1_sex_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:paddingRight="20dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/signup1_driver_radiomale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:checked="true"
                        android:text="男"
                        android:textColor="@color/black_3"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/signup1_driver_radiofemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="女"
                        android:textColor="@color/black_3"
                        android:textSize="15dp"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginTop="1dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="单位"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/signup1_driver_company"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:hint="请输入单位名称"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="@color/black_3"
                    android:textColorHint="@color/hint_color"
                    android:textSize="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginTop="1dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="备用电话"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/signup1_driver_backup_phone"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:hint="请输入备用电话"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="@color/black_3"
                    android:textColorHint="@color/hint_color"
                    android:textSize="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/head_photo_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:text="头像"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/signup1_driver_head"
                        android:layout_width="40dp"
                        android:layout_height="30dp" />

                    <ImageView
                        android:id="@+id/signup1_driver_head_loading"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/loading"
                        android:visibility="gone" />

                </FrameLayout>


                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/right_arrow" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sfz_photo_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:layout_marginTop="1dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:text="身份证"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/sfz"
                        android:layout_width="40dp"
                        android:layout_height="30dp" />

                    <ImageView
                        android:id="@+id/sfz_loading"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/loading"
                        android:visibility="gone" />

                </FrameLayout>

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/right_arrow" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/licence_photo_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:layout_marginTop="1dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:text="驾驶证"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/signup1_driver_licence"
                        android:layout_width="40dp"
                        android:layout_height="30dp" />

                    <ImageView
                        android:id="@+id/signup1_driver_licence_loading"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/loading"
                        android:visibility="gone" />

                </FrameLayout>

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/right_arrow" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/jobcard_photo_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:layout_marginTop="1dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:text="从业资格证"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/signup1_driver_jop_card"
                        android:layout_width="40dp"
                        android:layout_height="30dp" />

                    <ImageView
                        android:id="@+id/signup1_driver_jop_card_loading"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/loading"
                        android:visibility="gone" />

                </FrameLayout>

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/right_arrow" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/signup1_next_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_button_1"
        android:clickable="true"
        android:enabled="true"
        android:text="下一步"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>