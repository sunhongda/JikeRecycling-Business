<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/map_location_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <ImageView
            android:id="@+id/map_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_8dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
            android:tint="@color/text_black"
            android:background="?android:attr/selectableItemBackground"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_h_48dp"
            android:layout_toLeftOf="@+id/btn_search"
            android:layout_toRightOf="@+id/map_back_btn"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_map_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:hint="地图选点"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/tx_20sp" />

            <Button
                android:id="@+id/button_map"
                android:layout_width="@dimen/bt_h_40dp"
                android:layout_height="@dimen/bt_h_40dp"
                android:background="@android:drawable/ic_search_category_default"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_top_8dp"
                android:background="@color/bg"
                android:text="搜索"
                android:textColor="@color/green"
                android:textSize="15sp" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <com.baidu.mapapi.map.MapView
                android:id="@+id/bmapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true" />

            <ImageView
                android:id="@+id/map_lacation_imageview_diwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@mipmap/location_poi" />

            <ImageView
                android:id="@+id/map_lacation_my_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:layout_margin="@dimen/margin_top_8dp"
                android:background="@mipmap/resetlocation" />

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:layout_gravity="right|bottom"
                android:layout_margin="10dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/map_lacation_zoom_out"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="+"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/map_lacation_zoom_in"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="-"
                    android:textSize="27sp" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="4">

            <ListView
                android:id="@+id/map_lacation_listview_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#dcdcdc"
                android:dividerHeight="1dp" />

            <ProgressBar
                android:id="@+id/map_location_progressbar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:visibility="visible" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>