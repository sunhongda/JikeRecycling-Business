<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="50px"
        android:background="#dcdcdc" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_color_f9"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/back_color_ff"
            android:orientation="horizontal"
            android:paddingLeft="20px"
            android:paddingRight="20px">

            <EditText
                android:id="@+id/sign_up_mobile_edittext"
                android:layout_width="0px"
                android:layout_height="100px"
                android:layout_weight="1"
                android:background="@color/back_color_ff"
                android:hint="手机号码"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="40px"
                android:singleLine="true"
                android:textSize="@dimen/text_view_30" />

            <Button
                android:id="@+id/sign_up_verify_button"
                android:layout_width="150px"
                android:layout_height="60px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="30px"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/btn_no_shape"
                android:text="发送验证码"
                android:inputType="number"
                android:textColor="@color/back_color_ff"
                android:textSize="@dimen/text_view_25" />

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c7dcdcdc" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/back_color_ff"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/sign_up_captcha_edittext"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginTop="10px"
                android:background="@color/back_color_ff"
                android:hint="验证码"
                android:maxLength="4"
                android:paddingLeft="40px"
                android:textSize="@dimen/text_view_30" />
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#c7dcdcdc" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/back_color_ff"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ed_setpwd"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginTop="10px"
                android:background="@color/back_color_ff"
                android:hint="设置密码  "
                android:paddingLeft="40px"
                android:textSize="@dimen/text_view_30" />
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#c7dcdcdc" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/back_color_ff"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ed_yespwd"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginTop="10px"
                android:inputType="textPassword"
                android:background="@color/back_color_ff"
                android:hint="确认密码  "
                android:paddingLeft="40px"
                android:textSize="@dimen/text_view_30" />
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#c7dcdcdc" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/sign_up_chechkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="我同意即客回收的服务协议"
                android:textColor="@color/text_color_hui"
                android:textSize="@dimen/text_view_25" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="30px">

            <Button
                android:id="@+id/sign_up_button"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="40px"
                android:background="@color/text_color_cheng"
                android:text="下一步"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_view_30" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>