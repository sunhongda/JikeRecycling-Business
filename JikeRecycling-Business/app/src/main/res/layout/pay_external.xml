<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20px">

            <!--<ImageView-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@drawable/msp_demo_title_bg"-->
            <!--android:scaleType="center"-->
            <!--android:src="@drawable/msp_demo_title"-->
            <!--tools:ignore="ContentDescription" />-->

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="商品名称:"
                    android:textColor="#777777"
                    android:textSize="@dimen/text_view_30"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/product_subject"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="测试的商品"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_view_30"
                    tools:ignore="HardcodedText" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="商品描述:"
                    android:textColor="#777777"
                    android:textSize="@dimen/text_view_30"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="该测试商品的详细描述"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_view_30"
                    tools:ignore="HardcodedText" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="商品价格:"
                    android:textColor="#777777"
                    android:textSize="@dimen/text_view_30"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0.01元"
                    android:textColor="#ff6600"
                    android:textSize="@dimen/text_view_30"
                    tools:ignore="HardcodedText" />
            </com.zhy.autolayout.AutoLinearLayout>

            <Button
                android:id="@+id/pay"
                android:layout_width="fill_parent"
                android:layout_height="75px"
                android:layout_margin="10dp"
                android:background="@drawable/btn_no_shape"
                android:onClick="pay"
                android:text="支付"
                android:textColor="@color/text_color_white"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/h5pay"
                android:layout_width="fill_parent"
                android:layout_height="75px"
                android:layout_margin="10dp"
                android:background="@drawable/btn_no_shape"
                android:onClick="h5Pay"
                android:text="网页支付转native"
                android:textColor="@color/text_color_white"
                tools:ignore="HardcodedText" />
        </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>