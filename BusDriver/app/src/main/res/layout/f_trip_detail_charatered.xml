<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wbg"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:visibility="visible">

        <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"

            app:cardBackgroundColor="@color/bg"
            app:cardCornerRadius="@dimen/corners_10dp"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/padding_40dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_order_nb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单号：????"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/tx_12sp" />

                        <View
                            android:layout_width="@dimen/bt_h_40dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="时间：???"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/tx_12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/margin_top_8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="出发时间"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/tx_14sp" />

                        <TextView
                            android:id="@+id/tv_start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="？？？"
                            android:textColor="@color/text_secead"
                            android:textSize="@dimen/tx_14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/margin_top_8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="包车类型"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/tx_14sp" />

                        <TextView
                            android:id="@+id/tv_chartered_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="全日/半日租"
                            android:textColor="@color/text_secead"
                            android:textSize="@dimen/tx_14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/margin_top_8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="大巴类型"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/tx_14sp" />

                        <TextView
                            android:id="@+id/tv_bus_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="？？座大巴"
                            android:textColor="@color/text_secead"
                            android:textSize="@dimen/tx_14sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/margin_top_8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="包车单价"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/tx_14sp" />

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="？元"
                            android:textColor="@color/text_secead"
                            android:textSize="@dimen/tx_14sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/margin_top_8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="包车里程"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/tx_14sp" />

                        <TextView
                            android:id="@+id/tv_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="？小时/？公里"
                            android:textColor="@color/text_green"
                            android:textSize="@dimen/tx_14sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/margin_top_8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="已收金额"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/tx_14sp" />

                        <TextView
                            android:id="@+id/tv_received"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="？？？元"
                            android:textColor="@color/text_secead"
                            android:textSize="@dimen/tx_14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/margin_top_8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="待收尾款"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/tx_14sp" />

                        <TextView
                            android:id="@+id/tv_obligation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="？？？元"
                            android:textColor="@color/text_secead"
                            android:textSize="@dimen/tx_14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/corners_10dp"
                        android:layout_marginLeft="@dimen/corners_8dp"
                        android:layout_marginRight="@dimen/corners_8dp"
                        android:layout_height="2dp"
                        android:background="@color/v6_navi_set_divider_line"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/margin_top_8dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="乘客信息"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/tx_15sp" />
                        <LinearLayout
                            android:layout_marginTop="@dimen/corners_10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="乘客姓名"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/tx_14sp" />

                            <TextView
                                android:id="@+id/p_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="？？？"
                                android:textColor="@color/text_secead"
                                android:textSize="@dimen/tx_14sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_pphone_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:paddingTop="@dimen/padding_4dp"
                            android:paddingBottom="@dimen/padding_4dp"
                            android:drawablePadding="@dimen/padding_8dp"
                            android:autoLink="phone"
                            android:text=""
                            android:textColor="@color/text_black"
                            android:drawableLeft="@mipmap/ic_call"
                            android:textSize="@dimen/tx_14sp" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/corners_10dp"
                        android:layout_marginLeft="@dimen/corners_8dp"
                        android:layout_marginRight="@dimen/corners_8dp"
                        android:layout_height="2dp"
                        android:background="@color/v6_navi_set_divider_line"
                        />


                    <LinearLayout
                        android:id="@+id/days"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"></LinearLayout>

                </LinearLayout>

                <!--android:background="#0000"-->
                <Button
                    android:id="@+id/bt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_h_48dp"
                    android:background="#0000"
                    android:text="去评价"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/tx_15sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
</FrameLayout>