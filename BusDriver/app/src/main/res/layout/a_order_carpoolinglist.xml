<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/v_s">
    <RelativeLayout
        style="@style/v_s"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/window">
        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/icon_to_left"
            android:background="?attr/selectableItemBackground"/>

        <View
            android:id="@+id/v"
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_centerInParent="true" />
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_centerInParent="true"
    android:layout_toLeftOf="@+id/v">
    <Button
        android:id="@+id/bt_left"
        style="@style/v_s"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@mipmap/icon_left_choose_jie"
        android:gravity="center"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="包车单"
        android:textColor="@color/tx_white"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/left_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="4dp"
        android:minWidth="15dp"
        android:minHeight="15dp"
        android:text="1"
        android:textSize="10dp"
        android:layout_gravity="top|right"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/reddot"
        android:visibility="gone"/>


</FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/v">
            <Button
                android:id="@+id/bt_right"
                style="@style/v_s"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@mipmap/icon_right_song"
                android:gravity="center"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="拼车单"
                android:textColor="@color/green"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/right_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="4dp"
                android:minWidth="15dp"
                android:minHeight="15dp"
                android:text="1"
                android:textSize="10dp"
                android:layout_gravity="top|right"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/reddot"
                android:visibility="gone"/>

        </FrameLayout>

    </RelativeLayout>
    <LinearLayout
         android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </FrameLayout>
    </LinearLayout>








</LinearLayout>