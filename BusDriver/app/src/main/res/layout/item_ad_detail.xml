<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_order_nb"
            android:layout_marginTop="@dimen/margin_top_4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号："
            android:layout_marginLeft="@dimen/margin_left_8dp"
            android:textSize="16sp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_state"
            android:layout_marginTop="@dimen/margin_top_4dp"
            android:text=""
            android:textSize="@dimen/tx_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/diver_1dp"
        android:background="@color/diver" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"

        >
        <ImageView
            android:id="@+id/iv_passenger"
            android:layout_width="@dimen/img_104dp"
            android:layout_height="@dimen/img_104dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/padding_16dp"
            android:layout_marginRight="@dimen/padding_16dp"
            android:layout_marginTop="@dimen/padding_16dp"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_passenger"
            android:gravity="center"
            android:maxLength="10"
            android:singleLine="true"
            android:text="乘客姓名"
            android:textColor="@color/text_black"
            android:textSize="@dimen/tx_14sp" />
        <TextView
            android:id="@+id/tv_phone_num"
            android:layout_toRightOf="@id/iv_passenger"
            android:autoLink="phone"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/tx_14sp"
            android:text="电话："
            />
        <TextView
            android:id="@+id/tv_booking"
            android:layout_toRightOf="@id/iv_passenger"
            android:layout_below="@id/tv_phone_num"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/tx_14sp"
            android:text="订座：？个"
            />
        <TextView
            android:id="@+id/tv_pay_state"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="@dimen/corners_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:textSize="@dimen/tx_14sp"
            android:text="未支付"
            />
        <TextView
            android:id="@+id/tv_pay_price"
           android:layout_marginRight="@dimen/corners_10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_phone_num"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/tx_14sp"
            android:text="？？元"
            />
        <Button
            android:id="@+id/bt_is_in"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="未上车"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_passenger"
            android:visibility="gone"
            />

    </RelativeLayout>





</LinearLayout>
