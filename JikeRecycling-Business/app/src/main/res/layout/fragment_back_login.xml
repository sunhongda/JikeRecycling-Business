<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_color_f9">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginBottom="30px"
        android:layout_marginTop="30px">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/tanhao" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="您确定要退出嘛?"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_view_30" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="30px">

        <Button
            android:id="@+id/fragment_back_login_yes"
            android:layout_width="270px"
            android:layout_height="60px"
            android:layout_marginLeft="50px"
            android:layout_marginTop="5px"
            android:background="@drawable/btn_yes_shape"
            android:text="确定"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_view_30" />

        <Button
            android:id="@+id/fragment_back_login_no"
            android:layout_width="270px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:background="@drawable/btn_no_shape"
            android:text="取消"
            android:layout_marginTop="5px"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_view_30" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>