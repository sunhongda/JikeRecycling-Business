<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_which_day"
            android:layout_marginLeft="@dimen/bt_h_32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第1天"
            android:textSize="@dimen/tx_14sp"
            android:textColor="@color/green"
            />
        <TextView
            android:id="@+id/tv_start_one_day_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bt_h_24dp"
            android:text="2015年12月20日"
            android:textColor="@color/text_secead"
            android:textSize="@dimen/tx_12sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_8dp"
            android:text="00时00分"
            android:textColor="@color/text_secead"
            android:textSize="@dimen/tx_12sp" />

        <LinearLayout
            android:layout_width="@dimen/img_16dp"
            android:layout_height="@dimen/img_40dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="@dimen/diver_1dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="@dimen/diver_1dp"
                android:src="@mipmap/ic_car" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="1dp"
                android:src="@mipmap/ic_d_line" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_start_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_top_8dp"
            android:text="未知"
            android:textColor="@color/text_black"
            android:textSize="@dimen/tx_12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical">
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_8dp"
            android:text="00时00分"
            android:textColor="@color/text_secead"
            android:textSize="@dimen/tx_12sp" />

        <LinearLayout
            android:layout_width="@dimen/img_16dp"
            android:layout_height="@dimen/img_40dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="1dp"
                android:src="@mipmap/ic_down" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="1dp"
                android:src="@mipmap/ic_car" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="@dimen/diver_1dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_end_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_top_8dp"
            android:text="未知"
            android:textColor="@color/text_black"
            android:textSize="@dimen/tx_12sp" />
    </LinearLayout>
</LinearLayout>